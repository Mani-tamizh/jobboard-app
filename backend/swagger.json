{
  "swagger": "2.0",
  "info": {
    "title": "Job Board API",
    "version": "1.0.0",
    "description": "API for job listing and creation"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/api/jobs": {
      "get": {
        "summary": "Get all jobs",
        "responses": {
          "200": {
            "description": "A list of jobs"
          }
        }
      },
      "post": {
        "summary": "Create a job",
        "parameters": [
          {
            "in": "body",
            "name": "job",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Job"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Job created"
          }
        }
      }
    }
  },
  "definitions": {
    "Job": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "company": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "salary": {
          "type": "string"
        }
      }
    }
  }
}
